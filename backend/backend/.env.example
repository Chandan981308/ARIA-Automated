# Application Settings
APP_NAME="ARIA Voice Agent"
APP_VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/aria_crm
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Tata Tele Services API
TATA_TELE_API_URL=https://api.cloudphone.tatatele.in/v1/
TATA_TELE_API_KEY=your-tata-tele-api-key
TATA_TELE_API_SECRET=your-tata-tele-api-secret

# Deepgram STT
DEEPGRAM_API_KEY=your-deepgram-api-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Pinecone Vector DB
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=aria-leads

# Calling Settings
CALLING_HOURS_START=09:00
CALLING_HOURS_END=21:00
MAX_CONCURRENT_CALLS=100
DEFAULT_MAX_ATTEMPTS=3
DEFAULT_RETRY_INTERVAL_HOURS=4
